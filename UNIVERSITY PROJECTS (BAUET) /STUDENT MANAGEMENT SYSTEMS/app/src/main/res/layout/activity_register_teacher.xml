<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegisterTeacher">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/RT_logo"
                android:layout_width="113dp"
                android:layout_height="72dp"
                android:layout_marginTop="68dp"
                android:src="@drawable/logofirst"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/RT_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register As Teacher"
                android:textColor="@color/white"
                android:textSize="27dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RT_logo" />

            <EditText
                android:id="@+id/RT_name"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/edittextbg"
                android:hint="Enter Your Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RT_register" />

            <EditText
                android:id="@+id/RT_email"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/edittextbg"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RT_name" />


            <EditText
                android:id="@+id/RT_number"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/edittextbg"
                android:hint="Enter Your Phone Number"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RT_email" />

            <EditText
                android:id="@+id/RT_pass"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/edittextbg"
                android:hint="Enter your Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RT_number" />

            <EditText
                android:id="@+id/CRT_pass"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittextbg"
                android:hint="Confirm your Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.524"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RT_pass" />

            <EditText
                android:id="@+id/editText_token"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/edittextbg"
                android:hint="Enter your Token"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CRT_pass" />
            <TextView
                android:id="@+id/tln2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="7dp"
                android:text="If you already have an account?"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/tln5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_token" />


            <TextView
                android:id="@+id/tln5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/tln2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tln2"
                app:layout_constraintTop_toTopOf="@+id/tln2" />


            <Button
                android:id="@+id/trt_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:textSize="25dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tln5" />



        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

</ScrollView>