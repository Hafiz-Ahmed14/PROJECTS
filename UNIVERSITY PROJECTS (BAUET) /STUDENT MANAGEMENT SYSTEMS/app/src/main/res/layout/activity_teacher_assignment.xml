<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/centerbackground"
    android:orientation="vertical"
    tools:context=".TeacherAssignment">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/levender_border"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload PDF"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/asgnupload"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/pdflogo"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/nameTopic"
                android:background="@drawable/levender_border"
                android:layout_marginTop="20dp"
                android:hint="Enter Course Code"
                android:padding="16dp"
                android:gravity="start|center_vertical"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/batch"
                android:background="@drawable/levender_border"
                android:layout_marginTop="20dp"
                android:hint="Enter Batch:"
                android:padding="16dp"
                android:gravity="start|center_vertical"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uplodTopic"
                android:background="@drawable/levender_border"
                android:layout_marginTop="20dp"
                android:hint="Enter topic name"
                android:padding="16dp"
                android:gravity="start|center_vertical"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/deadline"
                android:background="@drawable/levender_border"
                android:layout_marginTop="20dp"
                android:hint="Submission Deadline"
                android:inputType="datetime"
                android:padding="16dp"
                android:gravity="start|center_vertical"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uplodfile"
                android:background="@drawable/levender_border"
                android:layout_marginTop="20dp"
                android:focusable="false"
                android:hint="Select File"
                android:padding="16dp"
                android:gravity="start|center_vertical"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:id="@+id/savebutton"
                android:text="Upload"
                android:textSize="25sp"
                app:cornerRadius="20dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</ScrollView>